<?xml version="1.0" encoding="UTF-8"?>
<!-- Use distinct internal keys; avoid same names as sys/env -->
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <!-- Internal keys -->
        <Property name="application.name.resolved">${sys:application.name:-${env:APP_NAME:-ifstatements}}</Property>
        <Property name="log.dir.resolved">${sys:log.dir:-${env:LOG_DIR:-logs}}</Property>
        <Property name="log.level.resolved">${sys:log.level.root:-${env:LOG_LEVEL:-INFO}}</Property>
        <Property name="pattern">%d{yyyy-MM-dd'T'HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg %X%n</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${pattern}"/>
        </Console>

        <RollingFile name="File"
                     fileName="${log.dir.resolved}/${application.name.resolved}.log"
                     filePattern="${log.dir.resolved}/archive/${application.name.resolved}-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${pattern}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="50 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="14"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="${log.level.resolved}">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>
